@model aser_electrification.Models.Commune

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="row mt-5">
                <div class="col">
                    <div class="card">
                        <div class="card-header text-black bg-purple-light text-center">Gestion des communes</div>
                        <div class="card-body">
                            <div class="mb-4">
                                <div class="d-flex mb-2">
                                    <h5 class="card-title flex-grow-1 text-center">Formulaire de modification de la commune</h5>
                                </div>

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ID_Commune" />

                                <div class="col-12">
                                    <label asp-for="Nom_Commune" class="control-label">Nom Commune</label>
                                    <input asp-for="Nom_Commune" class="form-control mt-2" />
                                    <span asp-validation-for="Nom_Commune" class="text-danger"></span>
                                </div>

                                <div class="col-12 mt-3">
                                    <label asp-for="ID_Departement" class="control-label">Département</label>
                                    <select asp-for="ID_Departement" class="form-control mt-2" asp-items="ViewBag.Departement"></select>
                                    <span asp-validation-for="ID_Departement" class="text-danger"></span>
                                </div>

                                <div class="col-12 mt-3">
                                    <button type="submit" value="Save" class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
                                    <a asp-action="Index" class="btn btn-danger ms-2"><i class="fas fa-backspace"></i> Retourner à la liste</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
