@model aser_electrification.Models.Pager;

<div class="container">
    @if (Model.TottalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Villages" asp-action="index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Villages" asp-action="index" asp-route-pg="@(Model.CurentPage - 1)">Previous</a>
                </li>
            }


            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurentPage ? "active" :"")">
                    <a class="page-link" asp-controller="Villages" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
            @if (Model.CurentPage < Model.TottalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Villages" asp-action="index" asp-route-pg="@(Model.CurentPage + 1)">Nex</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Villages" asp-action="index" asp-route-pg="@(Model.TottalPages)">Last</a>
                </li>
            }

        </ul>
    }
</div>
